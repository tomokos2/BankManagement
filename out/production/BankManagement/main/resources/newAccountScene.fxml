<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.NewAccountController">
   <children>
      <VBox alignment="CENTER" prefHeight="574.0" prefWidth="1000.0">
         <children>
            <Label text="New Account Form">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            <GridPane alignment="TOP_CENTER" prefWidth="840.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="400.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="firstNameField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" GridPane.columnIndex="1" />
                  <Label text="First Name">
                     <padding>
                        <Insets right="20.0" />
                     </padding></Label>
                  <Label text="Last Name" GridPane.rowIndex="1">
                     <padding>
                        <Insets right="20.0" />
                     </padding></Label>
                  <TextField fx:id="lastNameField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Date of Birth" GridPane.rowIndex="2">
                     <padding>
                        <Insets right="20.0" />
                     </padding></Label>
                  <DatePicker fx:id="birthDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Address" GridPane.rowIndex="3" />
                  <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="User ID" GridPane.rowIndex="4" />
                  <TextField fx:id="userIDField" maxWidth="-Infinity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text="Password" GridPane.rowIndex="5" />
                  <PasswordField fx:id="passwordField" maxWidth="-Infinity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label text="Confirm password" GridPane.rowIndex="6" />
                  <PasswordField fx:id="passwordConfirmField" maxWidth="-Infinity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </GridPane>
            <Button id="submitBtn" mnemonicParsing="false" onAction="#onSubmitForm" text="Submit" />

         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <AnchorPane fx:id="popupScreen" layoutX="-9.0" layoutY="-9.0" prefHeight="809.0" prefWidth="1009.0" styleClass="background" stylesheets="@styles/style.css">
         <children>
            <VBox layoutX="328.0" layoutY="301.0" prefHeight="207.0" prefWidth="353.0" stylesheets="@styles/style.css">
               <children>
                  <Label text="Select New Account Type" />
                   <RadioButton fx:id="checking" mnemonicParsing="false" text="Checking">
                       <toggleGroup>
                           <ToggleGroup fx:id="accountType" />
                       </toggleGroup>
                  </RadioButton>
                   <RadioButton fx:id="savings" mnemonicParsing="false" text="Savings" toggleGroup="$accountType" />
                   <RadioButton fx:id="cd" mnemonicParsing="false" text="CD (Certificate of Deposit)" toggleGroup="$accountType" />
                   <RadioButton fx:id="retirement" mnemonicParsing="false" text="Retirement" toggleGroup="$accountType" />
                  <Button mnemonicParsing="false" onAction="#onBackToUserSelect" styleClass="exit" stylesheets="@styles/style.css" text="Back" />
                  <Button layoutX="10.0" layoutY="99.0" mnemonicParsing="false" onAction="#onSelectAccount" text="Create Application" />
               </children>
               <styleClass>
                  <String fx:value="popup" />
                  <String fx:value="padded-element" />
               </styleClass>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
